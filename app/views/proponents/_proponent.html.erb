<div id="<%= dom_id proponent %>">
  <div class="container">
    <div class="row">
      <div class="col">
        <strong>Nome:</strong>
        <%= proponent.name %>
      </div>
      <div class="col-6">
        <strong>CPF:</strong>
        <%= proponent.document %>
      </div>
      <div class="col">
        <strong>Data de nascimento:</strong>
        <%= proponent.date_of_birth %>
      </div>
    </div>
    <div class="row pt-2">
      <div class="col">
        <strong>Contato principal:</strong>
        <%= proponent.main_contact %>
      </div>
      <div class="col-6">
        <strong>Contato secundário:</strong>
        <%= proponent.secondary_contact %>
      </div>
      <div class="col">
        <strong>Salário bruto:</strong>
         <%= number_to_currency(proponent.gross_salary, unit: 'R$', separator: ',', delimiter: '.', format: '%u %n') %>
      </div>
    </div>

    <div class="row pt-2">
      <div class="col-6">
        <strong>Desconto:</strong>
        <%= number_to_currency(proponent.discount, unit: 'R$', separator: ',', delimiter: '.', format: '%u %n') %>
      </div>
    </div>
  </div>
</div>
